<div align="center" class="log">
     <img src="/assets/logo_name.png" class="text-center img-responsive">


   <br>
   <div class="container container1">
     <div class="jumbotron" id="jumbo1">
       <h2 class="text-center inner-form">LogIn to your Account</h2>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control bg-color input-lg", placeholder: "Email Address"  %>

    <br>

    <%= f.password_field :password, autocomplete: "off", class: "form-control bg-color input-lg", placeholder: "PASSWORD"  %>


  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>


    <%= f.submit "Log in",class: 'btn submit-button-log' %>

<% end %>

</div>
</div>
</div>
